#include <iostream>
using namespace std;

int main()
{
    double celsiusTemp; // Celsius temperature
    double FahrenhietTemp; //Fahrenheit temperature

    //Get value of celsius temperature
    cout<<"Input a Celsius temperature and press Enter;" <<endl;
    cin >>celsiusTemp;

    FahrenhietTemp=(celsiusTemp* 1.8) + 32;
    cout<< "Fahrenheit temperature is: " <<FahrenhietTemp <<endl;

    return 0;
}
