#include <iostream>
using namespace std;

int main()
{
    float n1,n2,n3;                                 //Creating three varibles, that are of float value
    cout << "Enter Three Numbers:   ";              // Cout statment to print out and promote the user to input three numbers
    cin >> n1 >> n2 >> n3 ;                         // cin keyword which allows users to enter a value which is stored in the three varibles

    if((n1 >=n2) && (n1 >=n3))          // if statement which evlautes the number using conditional operators
    cout<< "largest number :    " <<n1; //if statments to print out if n1 is largest

    else if ((n2 >=n1) && (n1 >=n3))    //else if print out n2
        cout<<"largest number : " << n2;
    else                                //else print out n3
        cout <<"Largest Number : " <<n3;

}
